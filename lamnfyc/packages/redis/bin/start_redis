#!/usr/bin/env bash

if _check_process $REDIS_PID; then
   echo "Redis is already running."
   exit
 fi

 printf "Starting redis $REDIS_HOST:$REDIS_PORT .."

 $VIRTUAL_ENV/bin/redis-server \
   --port $REDIS_PORT \
   --bind $REDIS_HOST \
   --logfile $VIRTUAL_ENV/logs/redis.log \
   --pidfile $REDIS_PID \
   --daemonize yes
 printf " Done\n"
